{
  "manifest_version": 3,
  "name": "Task Manager",
  "version": "1.0",
  "description": "A task manager extension",
  "permissions": ["activeTab", "storage"],
  "action": {
    "default_popup": "popup.html",
    "default_popup_width": 400,
    "default_popup_height": 600,
    "default_icon": {
      "16": "/icons/icon16.png",
      "32": "/icons/icon32.png",
      "48": "/icons/icon48.png",
      "128": "/icons/icon128.png"
    }
  }
}
